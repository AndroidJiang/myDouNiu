<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dm072"
                  android:layout_marginLeft="@dimen/dm018"
                  android:layout_marginRight="@dimen/dm018"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="@dimen/dm150"
                      android:id="@+id/ll_market_select_edit"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_market_select_edit"
                android:layout_width="@dimen/dm030"
                android:layout_height="@dimen/dm030"
                android:layout_gravity="center"
                android:src="@drawable/icon_edit"/>
            <TextView
                android:id="@+id/tv_market_select_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm008"
                android:text="编辑"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout android:layout_width="@dimen/dm200"
                      android:id="@+id/ll_market_select_new"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm008"
                android:text="最新"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <ImageView
                android:id="@+id/iv_market_select_new"
                android:layout_width="@dimen/dm018"
                android:layout_height="@dimen/dm024"
                android:layout_gravity="center"
                android:src="@drawable/icon_up_down"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout android:layout_width="@dimen/dm150"
                      android:id="@+id/ll_market_select_ratio"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:gravity="right"
                      android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm008"
                android:text="涨跌"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_market_select_ratio"
                android:layout_width="@dimen/dm018"
                android:layout_height="@dimen/dm024"
                android:src="@drawable/icon_up_down"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/colorBgGary"/>
    <FrameLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">

        <com.zfxf.douniu.view.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/rv_market_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm018"
            android:layout_marginRight="@dimen/dm018"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/dm420"
                      android:id="@+id/ll_market_select_none"
                      android:gravity="center"
                      android:visibility="gone"
                      android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的自选股将在这里显示！"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <ImageView
                android:layout_width="@dimen/dm180"
                android:layout_height="@dimen/dm180"
                android:layout_marginTop="@dimen/dm045"
                android:src="@drawable/icon_add"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBgGary"/>
</LinearLayout>
