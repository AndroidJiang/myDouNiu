<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm072"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dm030"
                android:paddingRight="@dimen/dm030">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_simulation_query_today_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="成交时间"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_simulation_query_today_price"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="成交价"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_simulation_query_today_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="成交量"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_simulation_query_today_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="状态"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                </LinearLayout>
            </LinearLayout>
            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/dm016"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_simulation_query_today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:visibility="gone"
                      android:background="@color/colorWhite"
                      android:orientation="horizontal"
                      android:layout_alignParentBottom="true"
                      android:paddingBottom="@dimen/dm025"
                      android:paddingTop="@dimen/dm025">
            <LinearLayout android:id="@+id/ll_simulation_query_history_start"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="起始时间"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:id="@+id/tv_simulation_query_history_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm032"
                    android:text="2017年4月26日"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm026"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="— — —"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm032"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm026"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/ll_simulation_query_history_end"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="截至时间"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:id="@+id/tv_simulation_query_history_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dm032"
                    android:text="2017年4月26日"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm026"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
