<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dm150"
        android:layout_marginLeft="@dimen/dm018"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm024"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_new_choice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="沪指低开低走跌0.88%，顺丰协物流股成 指低开低走跌0.88%，顺丰协为..."
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm026"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm016"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_new_choice_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="中方信富"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_new_choice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20:00"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_new_choice_img"
        android:layout_width="@dimen/dm130"
        android:layout_height="@dimen/dm130"
        android:layout_margin="@dimen/dm020"
        android:src="@drawable/public_img"/>
</LinearLayout>
