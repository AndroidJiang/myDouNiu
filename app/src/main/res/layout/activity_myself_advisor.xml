<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm015"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dm030"
        android:paddingTop="@dimen/dm030">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm018"
                android:gravity="right"
                android:text="姓名"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <EditText
                android:id="@+id/et_myself_advisor_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@drawable/backgroud_button_gary_color_hollow"
                android:hint="请输入您的姓名"
                android:paddingLeft="@dimen/dm020"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm018"
                android:gravity="right"
                android:text="手机"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <EditText
                android:id="@+id/et_myself_advisor_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@drawable/backgroud_button_gary_color_hollow"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:paddingLeft="@dimen/dm020"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm018"
                android:gravity="right"
                android:text="资格证号"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <EditText
                android:id="@+id/et_myself_advisor_number"
                android:layout_width="0dp"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginRight="@dimen/dm020"
                android:layout_weight="1"
                android:background="@drawable/backgroud_button_gary_color_hollow"
                android:hint="请输入您的资格证号"
                android:inputType="text"
                android:digits="@string/filter_vcode"
                android:paddingLeft="@dimen/dm020"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/dm120"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm018"
                android:gravity="right"
                android:text="从业年限"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <LinearLayout
                android:id="@+id/ll_myself_advisor_year"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dm080"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@drawable/backgroud_button_gary_color_hollow"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_myself_advisor_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dm020"
                    android:paddingRight="@dimen/dm020"
                    android:text="0-1年"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm026"/>
                <ImageView
                    android:layout_width="@dimen/dm025"
                    android:layout_height="@dimen/dm015"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_gravity="center"
                    android:src="@drawable/myself_down"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_myself_advisor_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm070"
        android:background="@drawable/backgroud_button_app_color">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
    </RelativeLayout>
</LinearLayout>
