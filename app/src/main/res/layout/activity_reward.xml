<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_reward"
        android:layout_width="match_parent"
        android:padding="@dimen/dm020"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@color/colorWhite"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:text="其他金额"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm035"
            android:textSize="@dimen/dm028"
            android:textColor="@color/titleText"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_reward_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="可填写1-200"
            android:inputType="number"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/dm010"
            android:background="@null"
            android:textColor="@color/colorText"
            android:textColorHint="@color/titleTextGray"
            android:layout_marginLeft="@dimen/dm015"
            android:textSize="@dimen/dm028"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="元"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm035"
            android:textSize="@dimen/dm028"
            android:textColor="@color/titleText"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"/>
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_reward_img"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginTop="@dimen/dm025"
            android:layout_marginBottom="@dimen/dm025"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginTop="@dimen/dm025"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_reward_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm015"
                android:layout_marginBottom="@dimen/dm010"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_reward_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <View android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="1"/>
                <ImageView
                    android:layout_width="@dimen/dm040"
                    android:layout_height="@dimen/dm040"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm030"
                    android:src="@drawable/home_shang_small"/>
                <TextView
                    android:id="@+id/tv_reward_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm015"
                    android:layout_marginRight="@dimen/dm030"
                    android:text="人打赏"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_reward_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:layout_marginLeft="@dimen/dm040"
        android:layout_marginRight="@dimen/dm040"
        android:layout_marginTop="@dimen/dm045"
        android:background="@drawable/backgroud_button_app_color">
        <TextView
            android:id="@+id/tv_reward_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="打赏"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
    </RelativeLayout>
</LinearLayout>
