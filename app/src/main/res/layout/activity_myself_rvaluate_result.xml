<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm480"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginRight="@dimen/dm035"
        android:layout_marginTop="@dimen/dm055"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_rvaluate_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dm050"
            android:text="保守型"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm038"/>
        <TextView
            android:id="@+id/tv_rvaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dm030"
            android:layout_marginLeft="@dimen/dm030"
            android:layout_marginRight="@dimen/dm030"
            android:text="此类投资者不愿意接受暂时的投资损失或者极小的资产波动，关注本金的安全，往往属于风险厌恶型的投资者，首要投资目标是保持投资的稳定性与资产的保值，并在此基础上尽可能使资产一定程度的增值，不愿意承受或能承受少许本金的损失和波动。这类投资者需要注意为达到上述目标回报率可能很低，以换取本金免于受损和较高的流动性"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
    </LinearLayout>

</LinearLayout>
