<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout
        android:id="@+id/ll_buy_niu_wx"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="@dimen/dm080"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm050"
            android:layout_height="@dimen/dm050"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:src="@drawable/icon_zf_wx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="微信"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dm014"
            android:layout_height="@dimen/dm028"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:src="@drawable/home_jiantou"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/ll_buy_niu_zfb"
        android:layout_width="match_parent"
        android:background="@color/colorWhite"
        android:layout_height="@dimen/dm080"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dm050"
            android:layout_height="@dimen/dm050"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:src="@drawable/icon_zf_zfb"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm020"
            android:text="支付宝"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm026"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/dm014"
            android:layout_height="@dimen/dm028"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm020"
            android:src="@drawable/home_jiantou"/>
    </LinearLayout>
</LinearLayout>
