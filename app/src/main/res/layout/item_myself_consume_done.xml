<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_myself_consume_wait_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm018"
            android:text="订单号:11510251354265"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm024"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_myself_consume_wait_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm018"
            android:layout_marginRight="@dimen/dm018"
            android:text="2017年4月10日16:35:20"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm027"
        android:layout_marginTop="@dimen/dm027"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_myself_consume_wait_img"
            android:layout_width="@dimen/dm080"
            android:layout_height="@dimen/dm080"
            android:layout_marginLeft="@dimen/dm020"
            android:src="@drawable/myself_pay_list"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_myself_consume_wait_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm027"
                android:layout_marginRight="@dimen/dm020"
                android:text="私密课《炒股指南》"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm026"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_myself_consume_wait_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm020"
                    android:layout_marginLeft="@dimen/dm027"
                    android:text="￥299元"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/dm026"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_myself_consume_wait_state"
                    android:layout_width="@dimen/dm110"
                    android:layout_height="@dimen/dm045"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="@dimen/dm020"
                    android:text="已完成"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/backgroud_button_gary_color"
                    android:textSize="@dimen/dm026"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
