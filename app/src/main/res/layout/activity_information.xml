<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/tv_information_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginTop="@dimen/dm024"
                android:text=""
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <LinearLayout
                android:id="@+id/ll_information_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm018"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginTop="@dimen/dm018"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_information_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm026"/>
                <TextView
                    android:id="@+id/tv_information_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm035"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm022"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm016"
                android:background="@color/colorBgGary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dm018"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_information_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm018"
                    android:layout_marginRight="@dimen/dm020"
                    android:text=""
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm026"
                    android:visibility="gone"/>
                <WebView
                    android:id="@+id/wv_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </WebView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
