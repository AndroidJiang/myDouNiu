<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm024"
        android:layout_marginTop="@dimen/dm024"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_advisor_home_one_img"
            android:layout_width="@dimen/dm120"
            android:layout_height="@dimen/dm120"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm018"
            android:src="@drawable/public_img"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm025"
            android:layout_marginRight="@dimen/dm020"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_advisor_home_one_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm005"
                    android:text="百变股神的1对1"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm028"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_advisor_home_one_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1468"
                        android:textColor="@color/colorTitle"
                        android:textSize="@dimen/dm022"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:text="人订阅"
                        android:textColor="@color/titleTextGray"
                        android:textSize="@dimen/dm022"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_advisor_home_one_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:text="￥ 2990/半年"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_advisor_home_one_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:text="稳定盈利，长期复利奔跑才是长胜之道。服务个 股中短结合，综合选股，五大服务..."
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
