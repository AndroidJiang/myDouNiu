<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm015"
        android:paddingLeft="@dimen/dm018"
        android:paddingRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm015"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_home_research_zhibo_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="麒麟才女"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm026"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_item_home_research_zhibo_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000人正在看"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_item_home_research_zhibo_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm016"
            android:text="创建者：麒麟才女"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm022"/>

    </LinearLayout>
</LinearLayout>
