<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>

    <EditText
        android:id="@+id/et_askstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm020"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm032"
        android:hint="请输入您的问题"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm026"/>
    <TextView
        android:id="@+id/tv_askstock_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/50"
        android:gravity="end"
        android:layout_marginRight="@dimen/dm020"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/dm024"
    />
</LinearLayout>
