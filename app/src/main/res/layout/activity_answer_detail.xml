<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dm030"
                android:layout_height="@dimen/dm030"
                android:layout_margin="@dimen/dm020"
                android:src="@drawable/answer_ask"/>
            <TextView
                android:id="@+id/tv_answer_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:text=""
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm024"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dm020"
                android:layout_height="@dimen/dm020"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:src="@drawable/answer_time"/>
            <TextView
                android:id="@+id/tv_answer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm016"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/colorBgGary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_answer_detail_img"
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm100"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginTop="@dimen/dm024"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm016"
                android:layout_marginTop="@dimen/dm036"
                android:text=""
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm016"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dm020"
                    android:layout_height="@dimen/dm020"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm018"
                    android:src="@drawable/answer_time"/>
                <TextView
                    android:id="@+id/tv_answer_answer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm016"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/ll_answer_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dm030"
                android:layout_height="@dimen/dm026"
                android:layout_marginTop="@dimen/dm036"
                android:src="@drawable/heart"/>
            <TextView
                android:id="@+id/tv_answer_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm016"
                android:layout_marginRight="@dimen/dm018"
                android:layout_marginTop="@dimen/dm034"
                android:text=""
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_answer_detail_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dm020"
        android:text=""
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm024"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:layout_margin="@dimen/dm020"
        android:background="@color/colorTitle"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_answer_detail_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="主页"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginTop="@dimen/dm010"
            android:background="@color/colorWhite"/>
        <TextView
            android:id="@+id/tv_answer_detail_ask"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提问"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm034"/>
    </LinearLayout>
</LinearLayout>
