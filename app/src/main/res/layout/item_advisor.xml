<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_advisor_img"
        android:layout_width="@dimen/dm100"
        android:layout_height="@dimen/dm100"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dm016"
        android:layout_marginRight="@dimen/dm018"
        android:layout_marginTop="@dimen/dm016"
        android:src="@drawable/home_adviosr_img"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_advisor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm030"
                android:text="刘倩倩"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <TextView
                android:id="@+id/tv_advisor_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm018"
                android:layout_marginTop="@dimen/dm030"
                android:text="金牌"
                android:textColor="@color/advisorType"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_advisor_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:text="100/每次"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_advisor_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:layout_marginLeft="@dimen/dm030"
                android:text="已回答99人次"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="@dimen/dm140"
        android:layout_height="@dimen/dm055"
        android:layout_marginTop="@dimen/dm048"
        android:background="@drawable/backgroud_bar_zhibo_text"
        android:gravity="center"
        android:text="向TA提问"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/dm024"/>
</LinearLayout>
