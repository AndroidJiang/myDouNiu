<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm072"
        android:background="@color/colorTitle"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_fragment_new_tt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_fragment_new_tt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:text="头条"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm030"/>
            <View
                android:id="@+id/v_fragment_new_tt"
                android:layout_width="@dimen/dm065"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/dm004"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_fragment_new_kx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_fragment_new_kx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="快讯"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm030"/>
            <View
                android:id="@+id/v_fragment_new_kx"
                android:visibility="invisible"
                android:layout_width="@dimen/dm065"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/dm004"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_fragment_new_jx"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="精选"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm030"/>
            <View
                android:id="@+id/v_fragment_new_jx"
                android:visibility="invisible"
                android:layout_width="@dimen/dm065"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/dm004"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_fragment_new_gg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="公告"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm030"/>
            <View
                android:id="@+id/v_fragment_new_gg"
                android:layout_width="@dimen/dm065"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:layout_height="@dimen/dm004"
                android:layout_alignParentBottom="true"
                android:background="@color/colorWhite"/>
        </RelativeLayout>

    </LinearLayout>
    <FrameLayout
        android:id="@+id/fl_fragment_new_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
</LinearLayout>
