<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_live_interaction_anchor"
        android:layout_width="@dimen/dm090"
        android:layout_height="@dimen/dm090"
        android:layout_marginLeft="@dimen/dm015"
        android:layout_marginTop="@dimen/dm024"
        android:src="@drawable/home_adviosr_img"/>
    <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/dm020"
                  android:layout_marginRight="@dimen/dm080"
                  android:layout_marginTop="@dimen/dm025">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/ll_live_interaction_anchor"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_live_interaction_anchor_from"
                android:layout_width="@dimen/dm060"
                android:layout_height="@dimen/dm030"
                android:layout_gravity="center"
                android:background="@drawable/backgroud_button_type_color"
                android:gravity="center"
                android:text="播主"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dm020"/>
            <TextView
                android:id="@+id/tv_live_interaction_anchor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:text="中方信富"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <TextView
                android:id="@+id/tv_live_interaction_anchor_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm015"
                android:text="09:23"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_live_interaction_anchor_content"
            android:layout_below="@id/ll_live_interaction_anchor"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:paddingLeft="@dimen/dm020"
            android:gravity="center|left"
            android:text="啊花啊花啊花啊花啊花啊花啊花啊花啊花"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
    </RelativeLayout>

</LinearLayout>
