<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/colorTitle"
                  android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingBottom="@dimen/dm010"
                      android:paddingTop="@dimen/dm010">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平均收益"
                    android:textColor="@color/colorWhiteE"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_average_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dm048"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dm050"
                android:layout_gravity="center"
                android:background="@color/colorWhite"/>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选股成功率"
                    android:textColor="@color/colorWhiteE"
                    android:textSize="@dimen/dm028"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_sucess_ratio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dm048"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingLeft="@dimen/dm020"
                      android:paddingRight="@dimen/dm020">
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="left"
                          android:layout_weight="1"
                          android:gravity="left"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="止损线"
                    android:textColor="@color/colorWhiteE"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:text="%"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dm038"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:gravity="center"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浮动止盈"
                    android:textColor="@color/colorWhiteE"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_rise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:text="%"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dm038"/>
            </LinearLayout>
            <LinearLayout android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_weight="1"
                          android:gravity="right"
                          android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持股周期"
                    android:textColor="@color/colorWhiteE"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm010"
                    android:text="天"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dm038"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm015"
            android:background="@color/colorWhite"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dm020"
                      android:layout_marginRight="@dimen/dm020"
                      android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_intelligence_choose_subscribe_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订阅："
                android:textColor="@color/colorWhiteE"
                android:textSize="@dimen/dm022"/>
            <TextView
                android:id="@+id/tv_intelligence_choose_subscribe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm030"
                android:text=""
                android:textColor="@color/colorWhiteE"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_intelligence_choose_subscribe_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm010"
            android:layout_marginLeft="@dimen/dm020"
            android:layout_marginRight="@dimen/dm020"
            android:layout_marginTop="@dimen/dm010"
            android:text=""
            android:textColor="@color/colorWhiteE"
            android:textSize="@dimen/dm022"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/colorBgGary"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="horizontal">
        <ListView android:id="@+id/lv_intelligence_choose"
                  android:layout_width="@dimen/dm180"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="@dimen/dm030"
                  android:layout_marginTop="@dimen/dm030"
                  android:cacheColorHint="#00000000"
                  android:divider="@android:color/transparent"
                  android:fadingEdge="none"
                  android:listSelector="@android:color/transparent"
                  android:scrollbars="none">
        </ListView>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="@dimen/dm065"
                          android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dm016"
                    android:text="推荐股票："
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
                <TextView
                    android:id="@+id/tv_intelligence_choose_stock_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dm024"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <LinearLayout android:layout_width="@dimen/dm180"
                              android:id="@+id/ll_intelligence_choose_history"
                              android:layout_height="match_parent"
                              android:gravity="right|center_vertical"
                              android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm016"
                        android:text="历史战绩》"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:background="@color/colorBgGary"
                          android:orientation="horizontal"
                          android:padding="@dimen/dm016">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="名称"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="现价/入选价格"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="最高涨幅"
                    android:textColor="@color/titleText"
                    android:textSize="@dimen/dm024"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_intelligence_choose"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dm015"
                android:layout_marginRight="@dimen/dm015"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_intelligence_choose_subscribe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:background="@color/colorTitle"
        android:gravity="center"
        android:text="立即订阅"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dm032"/>
</LinearLayout>
