<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="@dimen/dm015"
                  android:layout_marginTop="@dimen/dm015"
                  android:orientation="horizontal">
        <TextView android:id="@+id/tv_item_market_research_type"
                  android:layout_width="@dimen/dm080"
                  android:layout_height="@dimen/dm040"
                  android:layout_gravity="center"
                  android:background="@drawable/backgroud_button_app_color"
                  android:gravity="center"
                  android:text="深A"
                  android:textColor="@color/colorWhite"
                  android:textSize="@dimen/dm024"/>
        <TextView android:id="@+id/tv_item_market_research_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginLeft="@dimen/dm015"
                  android:text="格林美"
                  android:textColor="@color/titleText"
                  android:textSize="@dimen/dm028"/>
        <TextView android:id="@+id/tv_item_market_research_code"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:layout_marginLeft="@dimen/dm010"
                  android:text="002340"
                  android:textColor="@color/titleText"
                  android:textSize="@dimen/dm024"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_item_market_research_add"
            android:layout_width="@dimen/dm096"
            android:layout_height="@dimen/dm048"
            android:src="@drawable/icon_add_stock"/>
    </LinearLayout>
</LinearLayout>
