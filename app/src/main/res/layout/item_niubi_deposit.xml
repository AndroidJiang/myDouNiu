<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dm080"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm080"
            android:background="@color/colorWhite"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_niubi_deposit_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="8000牛币"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <TextView
                android:id="@+id/tv_item_niubi_deposit_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dm020"
                android:text="+1500牛币"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm022"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_item_niubi_deposit_rmb"
                android:layout_width="@dimen/dm120"
                android:layout_height="@dimen/dm050"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm020"
                android:background="@drawable/backgroud_bg_app_color_hollow"
                android:gravity="center"
                android:text="￥70元"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
