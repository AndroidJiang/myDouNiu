<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dm010"
                  android:layout_marginBottom="@dimen/dm010"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView android:id="@+id/tv_item_market_select_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="格林美"
                      android:layout_gravity="center"
                      android:textColor="@color/titleText"
                      android:textSize="@dimen/dm024"/>
            <TextView android:id="@+id/tv_item_market_select_code"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="002340"
                      android:textColor="@color/titleText"
                      android:textSize="@dimen/dm024"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_item_market_select_price"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:text="12.23"
                  android:textColor="@color/titleText"
                  android:textSize="@dimen/dm028"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView android:id="@+id/tv_item_market_select_ratio"
                  android:layout_width="@dimen/dm120"
                  android:layout_height="@dimen/dm060"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="-9.98%"
                  android:background="@drawable/backgroud_button_green_color"
                  android:textColor="@color/colorWhite"
                  android:textSize="@dimen/dm028"/>

    </LinearLayout>
</LinearLayout>
