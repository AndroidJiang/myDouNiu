<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_bg_white_color"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dm025"
        android:layout_marginTop="@dimen/dm030"
        android:text="提示"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm034"/>
    <TextView
        android:id="@+id/tv_confirm_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:text="名称：格林美(002340)"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm028"/>
    <TextView
        android:id="@+id/tv_confirm_dialog_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginTop="@dimen/dm010"
        android:text="价格：12.235"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm028"/>
    <TextView
        android:id="@+id/tv_confirm_dialog_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginTop="@dimen/dm010"
        android:text="数量：500"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm028"/>
    <TextView
        android:id="@+id/tv_confirm_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm035"
        android:layout_marginTop="@dimen/dm010"
        android:text="确认买入?"
        android:textColor="@color/titleText"
        android:textSize="@dimen/dm028"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dm025"
        android:background="@color/gray"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="@dimen/dm100"
                  android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_confirm_dialog_cannel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm034"/>
        <View
            android:layout_width="1dp"
            android:layout_marginTop="@dimen/dm010"
            android:layout_marginBottom="@dimen/dm010"
            android:background="@color/gray"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_confirm_dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm034"/>
    </LinearLayout>
</LinearLayout>
