<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBgGary"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_history_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dm020"
            android:paddingRight="@dimen/dm020"
            android:paddingTop="@dimen/dm010"
            android:paddingBottom="@dimen/dm010"
            android:text="2017年3月13日"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
    </LinearLayout>
    <ListView
        android:id="@+id/rv_history_item"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dm018"
        android:paddingRight="@dimen/dm018"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
