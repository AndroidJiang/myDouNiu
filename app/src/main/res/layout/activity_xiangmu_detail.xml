<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBgGary">
        <com.zfxf.douniu.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm072"
            android:background="@color/colorWhite"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_xiangmu_detail_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm210"
                    android:scaleType="fitXY"
                    android:src="@drawable/xiangmu_img"/>
                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dm030">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm024"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="项目名称："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dm010"
                                android:layout_marginBottom="@dimen/dm024"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="截至日期："
                                    android:textColor="@color/titleText"
                                    android:textSize="@dimen/dm028"/>
                                <TextView
                                    android:id="@+id/tv_xiangmu_detail_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text=""
                                    android:textColor="@color/colorText"
                                    android:textSize="@dimen/dm028"/>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iv_xiangmu_detail_type"
                            android:layout_width="@dimen/dm090"
                            android:layout_height="@dimen/dm080"
                            android:layout_marginBottom="@dimen/dm020"
                            android:layout_marginRight="@dimen/dm024"
                            android:layout_marginTop="@dimen/dm020"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm065"
                        android:layout_marginLeft="@dimen/dm024"
                        android:gravity="center_vertical"
                        android:text="项目概要"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_xiangmu_detail_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dm024"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm016"
                    android:background="@color/colorBgGary"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dm065"
                        android:layout_marginLeft="@dimen/dm024"
                        android:gravity="center_vertical"
                        android:text="适用人群"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray"/>
                    <TextView
                        android:id="@+id/tv_xiangmu_detail_human"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dm024"
                        android:text=""
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
        </com.zfxf.douniu.view.MyScrollview>
        <TextView
            android:id="@+id/tv_xiangmu_detail_qualify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm072"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTitle"
            android:gravity="center"
            android:text="认购项目(万元起)"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/dm032"/>
    </RelativeLayout>
</LinearLayout>
