<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgGary"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/dm170"
                    android:background="@drawable/myself_wallet_bg">
        <TextView
            android:id="@+id/tv_myself_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dm032"
            android:text="0牛币"
            android:textColor="@color/white"
            android:textSize="@dimen/dm055"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dm026"
            android:layout_marginLeft="@dimen/dm018"
            android:text="*牛币只能用于购买平台付费产品"
            android:textColor="@color/WhiteE"
            android:textSize="@dimen/dm022"/>
        <TextView
            android:id="@+id/tv_myself_wallet_buy"
            android:layout_width="@dimen/dm122"
            android:layout_height="@dimen/dm042"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dm018"
            android:layout_marginRight="@dimen/dm018"
            android:background="@drawable/backgroud_bg_white_other"
            android:gravity="center"
            android:text="立即充值"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/dm022"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/dm080"
                      android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dm040"
                android:layout_height="@dimen/dm040"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm018"
                android:layout_marginRight="@dimen/dm018"
                android:src="@drawable/myself_wallet_ask"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="牛币可以做什么？"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dm024"
            android:layout_marginLeft="@dimen/dm018"
            android:layout_marginRight="@dimen/dm018"
            android:layout_marginTop="@dimen/dm024"
            android:text="牛币可以用来购买微问答、私密课、大参考、金股池等付费产品"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm024"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/dm080"
                      android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/dm040"
                android:layout_height="@dimen/dm040"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dm018"
                android:layout_marginRight="@dimen/dm018"
                android:src="@drawable/myself_wallet_money"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="如何获取牛币？"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm026"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_myself_wallet"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dm018"
            android:layout_marginRight="@dimen/dm018"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
