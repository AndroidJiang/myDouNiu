<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_advisor_all_direct_hudong"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dm086"
                android:layout_height="@dimen/dm086"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm008"
                android:layout_marginTop="@dimen/dm024"
                android:src="@drawable/advisor_hudong"/>
            <TextView
                android:id="@+id/tv_advisor_all_direct_hudong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm024"
                android:text="互动多"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_advisor_all_direct_renqi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dm086"
                android:layout_height="@dimen/dm086"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm008"
                android:layout_marginTop="@dimen/dm024"
                android:src="@drawable/advisor_renqi"/>
            <TextView
                android:id="@+id/tv_advisor_all_direct_renqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm024"
                android:text="人气高"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_advisor_all_direct_guandian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dm086"
                android:layout_height="@dimen/dm086"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm008"
                android:layout_marginTop="@dimen/dm024"
                android:src="@drawable/advisor_guandian"/>
            <TextView
                android:id="@+id/tv_advisor_all_direct_guandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dm024"
                android:text="观点多"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm016"
        android:background="@color/colorBgGary"/>
    <com.zfxf.douniu.view.pullloadmorerecyclerview.PullLoadMoreRecyclerView
        android:id="@+id/rv_advisor_all_direct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
