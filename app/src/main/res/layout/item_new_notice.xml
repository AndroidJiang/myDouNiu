<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dm080"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm080"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_new_notice_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dm018"
            android:text="4月5日上市公司重磅新闻全揽新闻全览……"
            android:textColor="@color/titleText"
            android:textSize="@dimen/dm026"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_new_notice_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dm018"
            android:text="09:52:50"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>

    </LinearLayout>
</LinearLayout>
