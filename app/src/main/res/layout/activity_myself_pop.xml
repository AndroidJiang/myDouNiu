<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_myself_pop_year1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:layout_marginTop="@dimen/dm010"
        android:layout_marginBottom="@dimen/dm010"
        android:paddingRight="@dimen/dm020"
        android:text="0 - 1年"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/tv_myself_pop_year2"
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm010"
        android:text="1 - 3年"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/tv_myself_pop_year3"
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm010"
        android:text="3 - 5年"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm028"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/tv_myself_pop_year4"
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm010"
        android:text="5 - 10年"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm026"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/tv_myself_pop_year5"
        android:layout_marginTop="@dimen/dm010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:layout_marginBottom="@dimen/dm010"
        android:text="10年以上"
        android:textColor="@color/colorText"
        android:textSize="@dimen/dm026"/>
</LinearLayout>
