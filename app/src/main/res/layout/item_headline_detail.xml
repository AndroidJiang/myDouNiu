<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_headline_detail_item_img"
        android:layout_width="@dimen/dm090"
        android:layout_height="@dimen/dm090"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dm015"
        android:layout_marginBottom="@dimen/dm015"
        android:layout_marginRight="@dimen/dm015"
        android:src="@drawable/home_adviosr_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dm023"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_headline_detail_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm005"
                android:text="刘倩倩"
                android:textColor="@color/titleTextGray"
                android:textSize="@dimen/dm024"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_headline_detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/02/03 15:25"
                android:textColor="@color/titleTextGray"
                android:textSize="@dimen/dm022"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_headline_detail_item_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dm010"
                android:text="很棒的平台，很好的老师"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
