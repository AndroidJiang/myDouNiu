<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zfxf.douniu.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dm065"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_zhengu_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dm020"
                            android:text="在线首席"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm028"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"/>
                        <RelativeLayout
                            android:layout_width="@dimen/dm100"
                            android:id="@+id/rl_zhengu_advisor_detail"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="@dimen/dm014"
                                android:layout_height="@dimen/dm028"
                                android:layout_centerInParent="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="@dimen/dm025"
                                android:layout_marginRight="@dimen/dm020"
                                android:src="@drawable/home_jiantou"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBgGary"
                        android:descendantFocusability="blocksDescendants">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_zhengu_advisor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dm005"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm065"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_zhengu_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dm020"
                        android:text="精彩回答"
                        android:textColor="@color/titleText"
                        android:textSize="@dimen/dm028"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <RelativeLayout
                        android:layout_width="@dimen/dm100"
                        android:id="@+id/rl_zhengu_answer_detail"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="@dimen/dm014"
                            android:layout_height="@dimen/dm028"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/dm025"
                            android:layout_marginRight="@dimen/dm020"
                            android:src="@drawable/home_jiantou"/>
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_zhengu_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm020"
                        android:layout_marginRight="@dimen/dm020"/>
                </RelativeLayout>
            </LinearLayout>
        </com.zfxf.douniu.view.MyScrollview>
        <ImageView
            android:id="@+id/iv_zhengu_ask"
            android:layout_width="@dimen/dm100"
            android:layout_height="@dimen/dm100"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dm180"
            android:layout_marginRight="@dimen/dm018"
            android:src="@drawable/zhengu_ask"/>
    </RelativeLayout>
</LinearLayout>
