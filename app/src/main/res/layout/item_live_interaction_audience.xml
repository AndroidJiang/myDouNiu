<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_live_interaction_audience"
        android:layout_width="@dimen/dm090"
        android:layout_height="@dimen/dm090"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dm015"
        android:layout_marginTop="@dimen/dm024"
        android:src="@drawable/home_adviosr_img"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm080"
        android:layout_marginRight="@dimen/dm020"
        android:layout_marginTop="@dimen/dm025"
        android:layout_toLeftOf="@id/iv_live_interaction_audience">
        <LinearLayout
            android:id="@+id/ll_live_interaction_audience"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm014"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_live_interaction_audience_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:text="涨停王子"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <TextView
                android:id="@+id/tv_live_interaction_audience_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm015"
                android:text="09:23"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_live_interaction_audience_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_live_interaction_audience"
            android:layout_marginTop="@dimen/dm010"
            android:background="@drawable/bg_green"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dm020"
            android:text="啊花"
            android:textColor="@color/colorText"
            android:textSize="@dimen/dm024"/>
    </RelativeLayout>

</RelativeLayout>
