<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorWhite"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/dm020"
              android:paddingRight="@dimen/dm020">
    <ImageView
        android:id="@+id/iv_myself_attention_matador_img"
        android:layout_width="@dimen/dm120"
        android:layout_height="@dimen/dm120"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dm020"
        android:src="@drawable/home_adviosr_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm160"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm030"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_myself_attention_matador_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm005"
                android:text="百变股神"
                android:textColor="@color/titleText"
                android:textSize="@dimen/dm028"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="本月收益"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_myself_attention_matador_month"
                android:layout_width="@dimen/dm100"
                android:layout_height="wrap_content"
                android:text="8.34%"
                android:gravity="right"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm020"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dm005"
                android:text="总排名"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_myself_attention_matador_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm015"
                android:text="2046"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm028"/>
            <ImageView
                android:id="@+id/iv_myself_attention_matador_type"
                android:layout_width="@dimen/dm025"
                android:layout_marginLeft="@dimen/dm015"
                android:layout_gravity="center"
                android:layout_height="@dimen/dm025"
                android:src="@drawable/myself_up"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="本周收益"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dm024"/>
            <TextView
                android:id="@+id/tv_myself_attention_matador_week"
                android:layout_width="@dimen/dm100"
                android:layout_height="wrap_content"
                android:text="%"
                android:gravity="right"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/dm028"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
