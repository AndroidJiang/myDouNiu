<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include layout="@layout/activity_base_title"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.zfxf.douniu.view.MyScrollview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dm035"
                    android:paddingTop="@dimen/dm035">
                    <ImageView
                        android:id="@+id/iv_headline_detail_img"
                        android:layout_width="@dimen/dm100"
                        android:layout_height="@dimen/dm100"
                        android:layout_marginLeft="@dimen/dm020"
                        android:scaleType="fitXY"
                        android:src="@drawable/home_adviosr_img"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm025"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_headline_detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dm016"
                            android:text="江南化工为何涨停?"
                            android:textColor="@color/titleText"
                            android:textSize="@dimen/dm032"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dm020"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_headline_detail_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="江南户"
                                android:textColor="@color/titleText"
                                android:textSize="@dimen/dm024"/>
                            <ImageView
                                android:layout_width="@dimen/dm020"
                                android:layout_height="@dimen/dm020"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm030"
                                android:src="@drawable/bar_time"/>
                            <TextView
                                android:id="@+id/tv_headline_detail_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm010"
                                android:text="08:46"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/dm022"/>
                            <ImageView
                                android:layout_width="@dimen/dm032"
                                android:layout_height="@dimen/dm020"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm030"
                                android:src="@drawable/icon_eye"/>
                            <TextView
                                android:id="@+id/tv_headline_detail_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm010"
                                android:text="1469"
                                android:textColor="@color/colorText"
                                android:textSize="@dimen/dm022"/>
                            <View android:layout_width="0dp"
                                  android:layout_height="match_parent"
                                  android:layout_weight="1"/>
                            <LinearLayout android:layout_width="wrap_content"
                                          android:id="@+id/ll_headline_detail_zan"
                                          android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/dm030"
                                android:layout_height="@dimen/dm025"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/dm030"
                                android:src="@drawable/heart"/>
                            <TextView
                                android:id="@+id/tv_headline_detail_count_zan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dm010"
                                android:layout_marginRight="@dimen/dm020"
                                android:text="赞26"
                                android:textColor="@color/colorTitle"
                                android:textSize="@dimen/dm026"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm020"
                    android:layout_marginRight="@dimen/dm020"
                    android:layout_marginTop="@dimen/dm025"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_headline_detail_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江南户"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/dm024"/>
                </LinearLayout>
            </LinearLayout>
        </com.zfxf.douniu.view.MyScrollview>
    </RelativeLayout>
</LinearLayout>
